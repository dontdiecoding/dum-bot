{
  "compilerOptions": {
    "target": "ESNext",                                 
    "module": "CommonJS",                              
    "sourceMap": true,                                
    "outDir": "./out",                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
